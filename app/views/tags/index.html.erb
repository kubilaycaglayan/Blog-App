<h1>Articles Tagged with <%= @tags.name %></h1>

<ul>
  <% @tags.each do |tag| %>
    <li>
      <%= link_to tag.name, tag_path(tag), 
      class: 'tag_title'%>
      <% if logged_in? %>
        <%= link_to "delete", tag_path(tag), method: :delete %>
      <% end %>
    </li>
    
  <% end %>
</ul>
